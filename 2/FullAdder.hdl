/**
 * Computes the sum of three bits.
 */
CHIP FullAdder {
    IN a, b, c;  // 1-bit inputs
    OUT sum,     // Right bit of a + b + c
        carry;   // Left bit of a + b + c

    PARTS:
    HalfAdder(a=a, b=b, sum=c1, carry=c2);
    HalfAdder(a=c1, b=c, sum=sum, carry=c3);
    Or(a=c2, b=c3, out=carry);
}